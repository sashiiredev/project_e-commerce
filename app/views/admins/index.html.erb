<div class="container mt-50 mb-50">
  <%= link_to "New item", new_item_path, method: :get,  class: "btn essence-btn mt-3 mb-3" %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Images</th>
      <th scope="col">Titre</th>
      <th scope="col">Description?</th>
      <th scope="col">Prix</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><img src="#"></td>
      <td><%=item.title %></td>
      <td><%=item.description %></td>
      <td><%=item.price%></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
<body>
  <div class="card mx-auto mt-5" style="width: 25rem;">
    <article class="card-body">
      <h4 class="card-title text-center mb-4 mt-1">Sign In</h4>
      <hr>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text"> <i class="fa fa-user"></i> </span>
      </div>
<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "example@example.com" %>     </div>
   </div>
   <div class="form-group">
     <div class="input-group">
       <div class="input-group-prepend">
        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
       </div>
<%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "**********" %>     </div>
   </div>

  <% if devise_mapping.rememberable? %>
  <div class="form-group row">
    <%= f.check_box :remember_me, class: "ml-3 mr-1" %>
    <%= f.label :remember_me %>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-success btn-lg btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</article>
</div>
</body>

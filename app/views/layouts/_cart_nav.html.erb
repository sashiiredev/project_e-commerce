<div class="card shopping-cart">
  <!--
  <div class="card-header bg-dark text-light">
  <i class="fa fa-shopping-cart" aria-hidden="true"></i>
  Shipping cart
  <a href="" class="btn btn-outline-info btn-sm pull-right">Continiu shopping</a>
  <div class="clearfix"></div>
</div>
        -->
<div class="card-body">
  <% if current_user.cart.items.empty? %>
  <center>
    <h2 class="border-bottom mb-4 pb-4">your cart is empty</h2>
  </center>
  <% else %>
  <% current_user.cart.items.each do |item| %>
  <div class="row" id="item-<%= item.id %>">
    <div class="col-12 col-sm-12 col-md-2 text-center">
      <img class="img-responsive" src="<%=asset_path(item.image_url)%>" alt="prewiew" width="120" height="80">
    </div>
    <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6">
      <h4 class="product-name"><strong><%= item.title%></strong></h4>
      <h4><small><%= item.description%></small></h4>
    </div>
    <div class="col-12 col-sm-12 text-sm-center col-md-4 text-md-right row">
      <div class="col-3 col-sm-3 col-md-6 text-md-right" style="padding-top: 5px">
        <h6><strong><%= item.price%> €<span class="text-muted"></span></strong></h6>
      </div>
      <div class="col-4 col-sm-4 col-md-4"></div>
<!--
        <div class="col-4 col-sm-4 col-md-4">
            <div class="quantity">
                <input type="button" value="+" class="plus">
                   <input type="number" step="1" max="99" min="1" value="1" title="Qty" class="qty"
                       size="4">
                <input type="button" value="-" class="minus">
            </div>
        </div>
-->
      <div class="col-2 col-sm-2 col-md-2 text-right">
        <% @itemcarts = Itemcart.where(cart: current_user.cart) %>
        <% @itemcart = @itemcarts.where(item: Item.find(item.id)) %>
        <a href="<%= item_itemcart_path(item.id, @itemcart.first.id) %>" type="button" class="btn btn-outline-danger btn-xs" data-method='delete'>
          <i class="fa fa-trash" aria-hidden="true"></i>
        </a>
      </div>
    </div>
  </div>
  <hr>
  <% end %>
  <%end%>


<div class="">
<a href="<%= root_path %>" class="btn btn-outline-secondary">
  Continue shopping
</a>
<div class="pull-right">
<%= form_tag cart_orderitem_index_path(current_user.cart.id) do %>
<article>
  <% if flash[:error].present? %>
    <div id="error_explanation">
      <p><%= flash[:error] %></p>
    </div>
  <% end %>

</article>

<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-description="A month's subscription"
        data-amount="<%= 10 * 100%>"
        data-currency="eur"
        data-locale="auto"></script>
<% end %>
 </div>
 <div class="pull-right" style="margin: 5px">
     Total price: <b><%= 10 %> €</b>
 </div>
</div>
</div>

</div>

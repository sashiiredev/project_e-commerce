<div class="col-md-6 col-lg-4 item zoom-on-hover">
  <a class="lightbox" href="<%= item_path(item.id) %>">
    <img class="img-fluid image" src="<%=asset_path(item.image_url)%>" width="auto" height="auto">
    <span class="description">
      <span class="description-heading"><%= item.title %></span>
      <span class="description-body"><%= item.description %></span>
    </span>
  </a>
</div>
